{
  "compilerOptions": {
    "outDir": "build",
    "removeComments": true,
    "target": "ES2022",
    "module": "commonjs",

    "esModuleInterop": true,
    "moduleResolution": "node",

    "sourceMap": true,
    "sourceRoot": "./src",

    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
